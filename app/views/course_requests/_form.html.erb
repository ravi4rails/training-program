<%= form_for(@course_request) do |f| %>
  <div class="modal-body">
    <% if @course_request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@course_request.errors.count, "error") %> prohibited this course_request from being saved:</h2>

        <ul>
        <% @course_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :course_id, value: @course.id %>
    <div class="form-group">
      <%= f.text_field :requester_name, class: "form-control", placeholder: "Write Your Name Here" %>
    </div>
    <div class="form-group">
      <%= f.text_field :requester_email, class: "form-control", placeholder: "Write Your Email Here" %>
    </div>
    <div class="form-group">
      <%= f.text_field :requester_contact, class: "form-control", placeholder: "Write Your Contact Here" %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="row">
      <div class="col-md-6">
        <button type="button" class="btn btn-warning btn-block" data-dismiss="modal">Not Now</button>
      </div>
      <div class="col-md-6">
        <%= f.submit "Submit Request", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>
