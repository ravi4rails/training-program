<p id="notice"><%= notice %></p>

<h1>Listing Course Requests</h1>

<table>
  <thead>
    <tr>
      <th>Requester name</th>
      <th>Requester email</th>
      <th>Requester contact</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_requests.each do |course_request| %>
      <tr>
        <td><%= course_request.requester_name %></td>
        <td><%= course_request.requester_email %></td>
        <td><%= course_request.requester_contact %></td>
        <td><%= course_request.course %></td>
        <td><%= link_to 'Show', course_request %></td>
        <td><%= link_to 'Edit', edit_course_request_path(course_request) %></td>
        <td><%= link_to 'Destroy', course_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

