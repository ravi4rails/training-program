<div class="well">
  <h1 class="text-center"><%= @course.name%></h1>
</div>
<div class="col-md-8">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Course Details</h3>
    </div>
    <div class="panel-body">
      <%= @course.course_details.html_safe %>
    </div>
  </div>
</div>
<div class="col-md-4">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Course Fee</h3>
    </div>
    <div class="panel-body">
      <h5><strong>Rs. <%= @course.course_fee %></strong></h5>
      <h5><strong>Payble in Two Installments</strong></h5>
    </div>
  </div>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Course Duration</h3>
    </div>
    <div class="panel-body">
      <h5><strong><%= @course.course_duration %> Months</strong></h5>
      <h5><strong>2 Hrs/Day</strong></h5>
    </div>
  </div>
  <div class="panel panel-success">
    <% if @course.student_courses.count > 0 %>
      <div class="panel-heading">
        <h3 class="panel-title">Student Registered Yet</h3>
      </div>
      <div class="panel-body">
        <h5><strong><%= @course.student_courses.count %> students get registered into this course. Be the next.</strong></h5>
        <%= link_to "Request for Course Now", new_course_request_path(:course_id => @course.id), class: "btn btn-primary", remote: true %>
      </div>
    <% else %>
      <div class="panel-heading">
        <h3 class="panel-title">Enroll For this Course</h3>
      </div>
      <div class="panel-body">
        <%= link_to "Request for Course Now", new_course_request_path(:course_id => @course.id), class: "btn btn-primary", remote: true %>
      </div>
    <% end %>
  </div>
</div>

<div class="modal fade" id="course_request" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>